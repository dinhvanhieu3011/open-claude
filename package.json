{
  "name": "ff",
  "productName": "FF",
  "version": "1.0.0",
  "description": "FF - A custom Claude client",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && pnpm run build:renderer",
    "build:renderer": "esbuild src/renderer/main.ts --bundle --outfile=static/js/main.js --format=esm --platform=browser && esbuild src/renderer/settings.ts --bundle --outfile=static/js/settings.js --format=esm --platform=browser",
    "start": "pnpm run build && electron .",
    "dev": "pnpm run build && electron .",
    "pack": "pnpm run build && electron-builder --dir",
    "dist": "pnpm run build && electron-builder"
  },
  "build": {
    "appId": "com.ff.app",
    "productName": "FF",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "static/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "FF cần quyền truy cập microphone để ghi âm và chuyển đổi giọng nói thành văn bản",
        "NSAppleEventsUsageDescription": "FF cần quyền để tự động dán văn bản đã chuyển đổi",
        "NSScreenRecordingUsageDescription": "FF cần quyền Screen Recording để ghi âm system audio (cuộc gọi Zoom/Teams/etc)"
      },
      "target": [
        {
          "target": "dmg",
          "arch": [
            "universal"
          ]
        }
      ]
    },
    "dmg": {
      "title": "FF",
      "icon": "build/icon.icns"
    },
    "win": {
      "icon": "build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nut-tree-fork/nut-js": "^4.2.6",
    "electron-store": "^11.0.2",
    "loudness": "^0.4.2",
    "mac-screen-capture-permissions": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "esbuild": "^0.27.1",
    "typescript": "^5.9.3"
  }
}